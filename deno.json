{
  "workspace": [
    "./frontend",
    "./webserver",
    "./lib"
  ],
  "tasks": {
    "dev": "deno run --watch main.ts",
    "dev:frontend": "deno task --cwd frontend dev",
    "dev:webserver": "deno task --cwd webserver dev",
    "test": "deno test --allow-all",
    "test:all": "deno test --allow-all ./frontend/test.ts ./webserver/test.ts ./lib/test.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  }
}